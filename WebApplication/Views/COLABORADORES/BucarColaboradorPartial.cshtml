@using WebApplication.Models;
@*@using RRSoft.Utils;*@
@{
    if (Model.Count == 0)
    {
        <div class="text-center">Nenhum registro encontrado!</div>
    }
    else
    {
        foreach (COLABORADORES emp in Model)
        {
            <div class="box box-info">
                <div class="box-header">
                    <div class="pull-right box-tools">
                    </div>
                    <h3 class="box-title">
                        <a href="@Url.Action("Details","COLABORADORES",new { id=emp.ID_COLABORADOR})"> @emp.NOME_FANTASIA</a>
                        @emp.ID_COLABORADOR
                    </h3>
                </div>
                <div class="box-body">
                    @{
                        if (emp.TEL1 != null)
                        {
                           @emp.TEL1 <br />
                        }
                        if (emp.CIDADE != null)
                        {
                            @emp.CIDADE <br />
                        }
                        //Busca municipio IBGE
                        if (emp.BAIRRO != null)
                        {
                            @emp.BAIRRO<br />
                        }
                        if (emp.REGIAO != null)
                        {
                            @emp.REGIAO<br />
                        }
                        if (emp.EMAIL != null)
                        {
                            @emp.EMAIL<br />
                        } 
                    }
                </div>
                @* Preenche dados de contato *@
                <div class="box-footer no-border">
                </div>
            </div>
        }
    }
}
